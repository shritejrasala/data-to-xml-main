---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    requires:
      - name: {{appName}}-portal

  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-portal

  - name: {{appName}}
    type: approuter.nodejs
    requires:
      - name: {{appName}}-portal

  - name: {{appName}}-portal-deployer
    type: com.sap.application.content
    path: app/portal
    {{#hasMultitenancy}}
    parameters:
      config:
        TENANT_HOST_PATTERN: "^(.*)-${default-uri}"
    {{/hasMultitenancy}}
    requires:
      - name: {{appName}}-portal
        parameters:
          content-target: true
          service-key:
            name: {{appName}}-portal-key
            config:
              content-endpoint: developer
      - name: {{appName}}-auth
      - name: {{appName}}-html5-repo-host
      - name: {{appName}}-app-deployer
    deployed-after:
      - {{appName}}-app-deployer

resources:
  - name: {{appName}}-portal
    type: org.cloudfoundry.managed-service
    parameters:
      service: portal
      service-plan: standard

  - name: {{appName}}-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
