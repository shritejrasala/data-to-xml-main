---
parameters:
  deploy_mode: html5-repo
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}

  - name: {{appName}}
    type: approuter.nodejs
    path: {{& approuterPath}}
    requires:
      - name: {{appName}}-html5-runtime

  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-html5-runtime

  - name: {{appName}}-app-deployer
    type: com.sap.application.content
    path: {{#isNodejs}}gen{{/isNodejs}}{{#isJava}}.{{/isJava}}
    requires:
      - name: {{appName}}-html5-repo-host
        parameters:
          content-target: true
    build-parameters:
      build-result: {{#isNodejs}}{{& appPath }}{{/isNodejs}}{{#isJava}}resources{{/isJava}}
      requires:
      {{#apps}}
        - name: {{strippedAppName}}{{strippedApp}}
          artifacts:
            - {{app}}.zip
          target-path: {{#isNodejs}}{{& appPath }}{{/isNodejs}}{{#isJava}}resources{{/isJava}}
      {{/apps}}

  {{#apps}}
  - name: {{strippedAppName}}{{strippedApp}}
    type: html5
    path: {{& appPath}}{{app}}
    build-parameters:
      build-result: dist
      builder: custom
      commands:
        - npm ci
        - npm run build
      supported-platforms: []
  {{/apps}}

resources:
  {{#hasApprouter}}
  - name: {{appName}}-html5-runtime
    type: org.cloudfoundry.managed-service
    parameters:
      service: html5-apps-repo
      service-plan: app-runtime
  {{/hasApprouter}}

  - name: {{appName}}-html5-repo-host
    type: org.cloudfoundry.managed-service
    parameters:
      service: html5-apps-repo
      service-plan: app-host
