{
  {{#hasPortal}}
  "welcomeFile": "/cp.portal",
  {{/hasPortal}}
  "routes": [
    {{#hasMTXRoute}}
    {
      "source": "^/-/cds/.*",
      "destination": "mtx-api",
      "authenticationType": "none"
    },
    {{/hasMTXRoute}}
    {{#hasMTXRouteJava}}
    {
      "source": "^/mt/.*",
      "destination": "srv-api",
      "authenticationType": "none"
    },
    {{/hasMTXRouteJava}}
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/appconfig/",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "csrfProtection": true
    }
  ]
}
