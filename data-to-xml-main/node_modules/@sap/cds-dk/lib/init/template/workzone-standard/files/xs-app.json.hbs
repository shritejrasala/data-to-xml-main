{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/?odata/(.*)$",
      "target": "/odata/$1",
      "destination": "{{appName}}-srv-api",
      {{#hasXsuaa}}"authenticationType": "xsuaa",{{/hasXsuaa}}
      "csrfProtection": true
    },
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt"{{#hasXsuaa}},
      "authenticationType": "xsuaa"{{/hasXsuaa}}
    }
  ]
}
